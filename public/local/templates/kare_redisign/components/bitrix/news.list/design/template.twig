{% if result is not empty %}
	{% for item in result.ITEMS %}
		{% set EditAction = template.AddEditAction(item.ID, item.EDIT_LINK) %}
		{% set DeleteAction = template.AddDeleteAction(item.ID, item.DELETE_LINK) %}
		{% set EDIT_ID = template.GetEditAreaId(item.ID) %}
		{% if item.CODE == 'love' %}
			<div id="{{ EDIT_ID }}" class="main-inner-banner-wrap">
				<div class="main-inner-banner bckg" style="background-image: url({{ item.PREVIEW_PICTURE.SRC }})"></div>

				<div class="bordered-white-block main-inner-banner-text">{{ item['~PREVIEW_TEXT'] }}</div>

			</div>
		{% elseif item.CODE == 'cooperation' %}
			<div id="{{ EDIT_ID }}" class="blue-area">
				<div class="custom-container custom-container--inner">
					<div class="text-content">{{ item['~PREVIEW_TEXT'] }}</div>
				</div>
			</div>

		{% endif %}
	{% endfor %}
{% endif %}